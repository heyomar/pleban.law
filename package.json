{
  "name": "plebanlaw.com",
  "version": "1.0.0",
  "description": "",
  "main": "index.php",
  "scripts": {
    "compile:styles": "node-sass --include-path scss styles/entry.scss styles/bundle.css",
    "compile:styles:prefix": "postcss -u autoprefixer -r styles/bundle.css",
    "styles": "parallelshell 'npm run compile:styles' 'npm run compile:styles:prefix'",
    "watch:styles": "nodemon --watch styles --ext scss --exec 'npm run styles'",
    "serve": "browser-sync start -p plebanlaw:4000 --files 'styles/*.css' '**/*.php'",
    "start": "parallelshell 'npm run serve' 'npm run watch:styles'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/callmegoon/plebanlaw.com.git"
  },
  "author": "Omar Rasool",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^6.7.6",
    "browser-sync": "^2.18.8",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^3.0.0-beta"
  }
}
